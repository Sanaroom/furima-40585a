<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>
  <div class='search-bar-contents'>
    <%= link_to image_tag("furima-logo-color.png", class:"furima-icon"), "/" %>

    
    <%= search_form_for Item.ransack(params[:q]), url: search_items_path, html: {class: "search-form"} do |f| %>
      <%= f.text_field :name, placeholder: '商品名から探す', class: 'input-box' %>
      <br>
      <%= f.label :submit, class: "search-button" do %>
        
      <%= f.submit :submit, id: "q_submit", style: "display: none;"%>
      <% end %>
    <% end %>


  </div>
  <div class='nav'>
    <ul class='lists-left'>
      <li id="category-list">
        カテゴリー
        <ul class="category-list hidden" id="category-pull-down">
          <li><%= link_to "レディース", "/ladies" %></li>
          <li><%= link_to "メンズ", "/mens" %></li>
          <li><%= link_to "ベビー・キッズ", "/baby" %></li>
          <li><%= link_to "インテリア・住まい・小物", "#" %></li> 
          <li><%= link_to "本・音楽・ゲーム", "#" %></li>
          <li><%= link_to "おもちゃ・ホビー・グッズ", "#" %></li>
          <li><%= link_to "家電・スマホ・カメラ", "#" %></li>
          <li><%= link_to "スポーツ・レジャ", "#" %></li>
          <li><%= link_to "ハンドメイド", "#" %></li>
          <li><%= link_to "その他", "#" %></li>
        </ul>
      </li>

      <li><%= link_to 'まとめて検索', search_items_path, class: "brand-list",id: "brand-list" %></li>

    </ul>
    <ul class='lists-right'>
      <% if user_signed_in? %>
      <li><%= link_to current_user.nickname, user_path(current_user), class: "user-nickname"  %></li>
      <li><%= link_to "購入履歴","#", class: "user-nickname"  %></li>
      <li><%= link_to 'ログアウト', destroy_user_session_path, data: {turbo_method: :delete}, class: "logout" %> </li>

      <% else %>
      <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
      <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>
</header>