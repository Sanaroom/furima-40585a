<div class='item-contents1'>
      <div class='list1'>
        <%= link_to item_path(item) do %>
          <div class='item-img-content'>
            <%= image_tag item.image , class: "item-img"  if item.image.attached?%>
            <% if item.order != nil %>
            <div class='sold-out'>
              <span>Sold Out!!</span>
            </div>
            <% end %>
          </div>

          <div class='item-info'>
            <h3 class='item-name'>
              <%= item.name %>
            </h3>
            <div class='item-price'>
              <span><%= item.price %>å††<br><%= item.shipping_cost.name %></span>
              <div class='star-btn'>
                <%= image_tag "star.png", class:"star-icon" %>
                <span class='star-count'>0</span>
              </div>
            </div>
          </div>
        <%end%>
      </div>
</div>
